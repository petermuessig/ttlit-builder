{
	"name": "ttlit-builder",
	"version": "0.0.9",
	"description": "Build Tagged Template Literals from String",
	"browser": "dist/builder.js",
	"main": "lib/index.js",
	"type": "module",
	"files": [
		"dist"
	],
	"scripts": {
		"clean": "rimraf dist",
		"build": "rollup -c --environment INCLUDE_DEPS,BUILD:production",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"lint:staged": "lint-staged",
		"format": "prettier --write .",
		"format:staged": "pretty-quick --staged --verbose",
		"test": "npm run lint && ava",
		"prepare": "node ./.husky/skip.js || husky install",
		"release:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
		"postversion": "npm run release:changelog && git commit --all --amend --no-edit",
		"prepublishOnly": "npm run clean && npm run build",
		"hooks:commit-msg": "commitlint -e",
		"hooks:pre-commit": "npm-run-all --sequential format:staged lint:staged"
	},
	"author": "Peter Muessig",
	"license": "Apache 2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/petermuessig/ttlit-builder.git"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"devDependencies": {
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@jsep-plugin/arrow": "^1.0.6",
		"@jsep-plugin/assignment": "^1.3.0",
		"@jsep-plugin/numbers": "^1.0.2",
		"@jsep-plugin/object": "^1.2.2",
		"@jsep-plugin/regex": "^1.0.4",
		"@jsep-plugin/template": "^1.0.5",
		"@jsep-plugin/ternary": "^1.1.4",
		"@rollup/plugin-terser": "^0.4.4",
		"ava": "^6.4.1",
		"conventional-changelog-cli": "^5.0.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^9.39.2",
		"eslint-plugin-jsdoc": "^61.5.0",
		"husky": "^9.1.7",
		"jsep": "^1.4.0",
		"lint-staged": "^16.2.7",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.7.4",
		"pretty-quick": "^4.2.2",
		"rimraf": "^6.1.2",
		"rollup": "^4.54.0",
		"rollup-plugin-node-resolve": "^5.2.0"
	}
}
